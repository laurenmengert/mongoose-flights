<%- include('../partials/header')%>


<section id=showPage>
    <div>Airline: <%= flight.airline %></div>
    <div>Airport: <%= flight.airport %></div>
    <div>Flight No: <%= flight.flightNo %></div>
    <div>Departs: <%= flight.departs %></div>
</section>
<br><br><h2>Tickets</h2>
<div id="addTicket"><a href="/flights/<%= flight._id %>/tickets/new">ADD TICKET</a></div>
<% if (tickets.length) { %>
  <table>
    <thead>
      <tr>
        <th>Seat:</th>
        <th>Price:</th>
      </tr>
    </thead>
    <tbody>
      <% tickets.forEach(function(t) { %>
        <tr>
          <td><%= t.seat %></td>
          <td><%= t.price %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
<% } else { %>
  <h5>No Tickets Yet</h5>
<% } %>
<br><br>
<h2>DESTINATIONS</h2>
 <form id="add-destination" method="POST"
   action="/flights/<%= flight._id %>/destinations">
   <label>Airport</label>
   <select name="airport">
    <option value="AUS">AUS</option>
    <option value="DFW">DFW</option>
    <option value="DEN">DEN</option>
    <option value="LAX">LAX</option>
    <option value="SAN">SAN</option>
</select><br><br>
   <label>Arrival</label>
   <input type="datetime-local" name="arrival" id="ArrivalDate" value="2020-05-25T08:30">
   <input type="submit" value="Add Destination">
 </form><br><br>
 <% if (flight.destinations.length) { %>
    <table>
      <thead>
        <tr>
          <th>Airport</th>
          <th>Arrival</th>
        </tr>
      </thead>
      <tbody>
        <% flight.destinations.forEach(function(d) { %>
          <tr>
            <td><%= d.airport %></td>
            <td><%= d.arrival %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  <% } else { %>
    <h5>No Destinations Yet</h5>
  <% } %>
<%- include('../partials/footer')%>